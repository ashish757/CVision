generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(dbgenerated("(gen_random_uuid())::text"))
  email         String   @unique
  password      String
  name          String?
  refreshTokens String[] @default([])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())

  @@index([email])
}
